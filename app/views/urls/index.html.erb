<% provide(:title, 'All links') %>
<h1>All Links</h1>

<div class="center">
  <%= will_paginate %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Short URL</th>
      <th>Original URL</th>
      <th>Visits</th>
    </tr>
  </thead>
  
  <tbody>
    <% @urls.each do |url| %>
    <tr>
      <td><%= url.id %></td>
      <td><%= APP_CONFIG['start_url'] + url.short_url %></td>
      <td><%= url.original_url %></td>
      <td><%= url.counter %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="center">
  <%= will_paginate %>
</div>

